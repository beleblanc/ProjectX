%h2 Person Profile
%table#pprofile
 %thead
  %tr
   %th="Person"
   %th="Created Time"
   %th="Show"
   %th="Edit"
   %th="Delete"
 %tbody
  - @person_profiles.each do |t|
   %tr
    %td=t.person.first_name + t.person.surname
    %td=t.time
    %td=link_to "Show", person_profile_path(t.id), :class => "btn"
    %td=link_to "Edit", edit_person_profile_path(t.id), :class => "btn"
    %td=link_to "Delete", person_profile_path(t.id),confirm: 'Are you sure you want to delete this person profile?', method: :delete, :class => "btn"

%br.clearfix
= link_to 'New Person Profile', new_person_profile_path, :class => "btn btn-success"