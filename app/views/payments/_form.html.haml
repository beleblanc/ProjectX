= form_for @payment, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      /Payment
    .control-group
      = f.label :invoice_id, :class => 'control-label'
      .controls
        = f.number_field :invoice_id, :class => 'number_field'
    .control-group
      = f.label :notes, :class => 'control-label'
      .controls
        = f.text_area :notes, :class => 'text_area'
    .control-group
      = f.label :payment_date, :class => 'control-label'
      .controls
        = f.date_select :payment_date, :class => 'date_select'
    .control-group
      = f.label :amount, :class => 'control-label'
      .controls
        = f.number_field :amount, :class => 'number_field'
    .control-group
      = f.label :payment_type_id, :class => 'control-label'
      .controls
        = f.text_field :payment_type_id, :class => 'text_field'
    .control-group
      = f.label :user_id, :class => 'control-label'
      .controls
        = f.number_field :user_id, :class => 'number_field'
    .control-group
      = f.label :eft_number, :class => 'control-label'
      .controls
        = f.text_field :eft_number, :class => 'text_field'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to "Cancel", payments_path, :class => 'btn'
