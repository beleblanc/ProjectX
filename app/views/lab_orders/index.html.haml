%h2 Lab Orders
%br
%Recently Placed Lab Orders
%table#LabOrderData
 %thead
  %tr
   %th="Date / Time"
   %th="Patient"
   %th="Next Action"
   %th="Next Action Staff"
   %th="Show"
   %th="Edit"
   %th="Delete"
 %tbody
  - @waitlist.each do |t|
   %tr
    %td=t.datetime_in
    %td=t.person
    %td=t.next_action
    %td=t.next_action_name
    %td=link_to "Triage", new_consultation_path({:person_id=>t.person_id, :wait_list_id => t.id}), :class => "btn"
    %td=link_to "Edit", wait_list_path(t.id), :class => "btn"
    %td=link_to "Delete", wait_list_path(t.id),confirm: 'Are you sure you want to delete this patient from the waiting list?', method: :delete,$

%br.clearfix

