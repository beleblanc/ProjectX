= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f|
  = f.hidden_field :soaps_id, :class => 'number_field'
  = f.input :department_operations_id, :collection => DepartmentOperation.all, value_method: :id, label_method: :name
  = f.input :comments, :class => 'text_area'
  = f.hidden_field :time, value: DateTime.now
  = f.hidden_field :user_id, value: current_user.id
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to "Cancel", orders_path, :class => 'btn'
