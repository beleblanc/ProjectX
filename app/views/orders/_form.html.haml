= form_for @order, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      /Order
    .control-group
      = f.label :soaps_id, :class => 'control-label'
      .controls
        = f.number_field :soaps_id, :class => 'number_field'
    .control-group
      = f.label :department_operations_id, :class => 'control-label'
      .controls
        = f.number_field :department_operations_id, :class => 'number_field'
    .control-group
      = f.label :comments, :class => 'control-label'
      .controls
        = f.text_area :comments, :class => 'text_area'
    .control-group
      = f.label :time, :class => 'control-label'
      .controls
        = f.datetime_select :time, :class => 'datetime_select'
    .control-group
      = f.label :user_id, :class => 'control-label'
      .controls
        = f.number_field :user_id, :class => 'number_field'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to "Cancel", orders_path, :class => 'btn'
