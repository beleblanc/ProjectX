-if @invoice.payments.any?
  %h2 Payments
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th
          Type
        %th
          Amount
        %th
          Date
        %th
          Notes
        %th
        %th
    %tbody
      -@invoice.payments.order(:payment_date).each do |payment|
        %tr
          %td
            =payment.payment_type_id
          %td
            =payment.amount
          %td
            =payment.payment_date
          %td
            =payment.notes
          %td
            =link_to "Edit", edit_payment_path(payment), class: "btn btn-mini"
          %td
            =link_to "X", payment_path(payment),:confirm => "Are you sure you want to delete this payment?" ,:method => :delete, class: "btn btn-mini btn-danger"